{% extends 'base.html.twig' %}

{% block body %}
    <h1>Fruit Edit / {{ fruit.name }}</h1>

    {{ form_start(edit_form) }}
        <div class="form-group">
            {{ form_row(edit_form.name, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group">
            {{ form_row(edit_form.origin, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="form-group">
            <input type="submit" class="btn btn-info" value="Edit">
            or <a href="{{ path('fruit_index') }}">Back to the list</a>
        </div>
    {{ form_end(edit_form) }}



{% endblock %}

