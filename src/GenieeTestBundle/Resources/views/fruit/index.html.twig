{% extends 'base.html.twig' %}

{% block body %}
    <h1>Fruits</h1>
    {{ form_start(form) }}
        <div class="form-group">
            {{ form_row(form.name, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group">
            {{ form_row(form.origin, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="form-group">
            <input type="submit" class="btn btn-default" value="Submit">
        </div>
    {{ form_end(form) }}

    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Origin</th>
                    <th>Task</th>
                </tr>
            </thead>
            <tbody>
            {% for fruit in fruits %}
                <tr>
                    <td><a href="{{ path('fruit_edit', { 'id': fruit.id }) }}">{{ fruit.id }}</a></td>
                    <td>{{ fruit.name }}</td>
                    <td>{{ fruit.origin }}</td>
                    <td>
                        <a href="{{ path('fruit_edit', { 'id': fruit.id }) }}">Edit</a> |
                        <a href="{{ path('fruit_delete', { 'id': fruit.id }) }}">Delete</a>

                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}

{% block javascripts %}

{% endblock %}

